%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{LHE}{cmtt}{m}{sl}
%<-nowarn>  {<->sub * cmtt/m/it}{}
%<+nowarn>  {<->ssub * cmtt/m/it}{}
%%%%%%% Bold extended series
