      {<-> deads10 }{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{LHE}{cmtt}{bx}{it}
%<-nowarn>  {<->sub * cmtt/bx/n}{}
%<+nowarn>  {<->ssub * cmtt/bx/n}{}
%</LHEcmtt>
%    \end{macrocode}
